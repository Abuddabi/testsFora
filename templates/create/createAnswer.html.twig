{% extends 'createLayout.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="container">
        <br><br>
        <h2 class="col-12">Create Answer</h2>
        <br>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">

                    {{ form_start(createAnswer) }}
                    <div class="form-group">
                        <label for="is_right">Select related question: </label><br>
                        {{ form_widget(createAnswer.question) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(createAnswer.answer) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(createAnswer.is_right, {'attr':{'id':'is_right'}}) }}
                        <label for="is_right">&nbsp; right answer</label>
                    </div>

{#                    Кнопка#}
                    {{ form_widget(createAnswer.save, {'attr':{'class':'col-3 btn btn-lg btn-block btn-outline-success'}}) }}

                    {{ form_end(createAnswer) }}
                </div>
            </div>

        </div>

    </div>

{% endblock %}
