{% extends 'createLayout.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="container">
        <br><br>
        <h2 class="col-12">Create Question</h2>
        <br>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">
                    {{ form_start(createQuestion) }}

                    <div class="form-group">
                        <label for="question_form_exam">Select Test: </label><br>
                        {{ form_widget(createQuestion.exam) }}
                    </div>
                    <div class="form-group">
                        <label for="question_form_type">Select Question type: </label><br>
                        {{ form_widget(createQuestion.type) }}
                    </div>
                    <div class="form-group">
                        <label for="question_form_text">Enter your Question: </label><br>
                        {{ form_widget(createQuestion.text) }}
                    </div>

{#                    Кнопка#}
                    {{ form_widget(createQuestion.save, {'attr':{'class':'col-3 btn btn-lg btn-block btn-outline-success'}}) }}

                    {{ form_end(createQuestion) }}
                </div>
            </div>

        </div>

    </div>

{% endblock %}
