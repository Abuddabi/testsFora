{% extends 'createLayout.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="container">
        <br><br>
        <h2 class="col-12">Create Question Type</h2>
        <br>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">
                    {{ form_start(createQuestionType) }}

                    <div class="form-group">
                        {{ form_widget(createQuestionType.typeName) }}
                    </div>

                    {#Кнопка#}
                    {{ form_widget(createQuestionType.save, {'attr':{'class':'col-3 btn btn-lg btn-block btn-outline-success'}}) }}

                    {{ form_end(createQuestionType) }}
                </div>
            </div>

        </div>

    </div>

{% endblock %}
