{% extends 'base.html.twig' %}

{% block title %}Book Page{% endblock %}

{% block body %}
    <div class="container">
        <br><br>
        <h2 class="col-12">{{ exam.title }}</h2>
        <br>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">
                    {{ form_start(passExam) }}

                    {{ form_widget(passExam.question, {'attr':{'name':'test'}}) }}

                    {{ form_end(passExam) }}
                    <div class="row">
                        <a href="{{ path('passExam', {'exam':exam.id}) }}" class="col-3">
                            <button type="button" class="btn btn-lg btn-block btn-outline-primary">Confirm</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
